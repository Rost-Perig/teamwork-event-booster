      <p class="modal-list__item-text">{{_embedded.venues.[0].name}}</p>
      {{/if}}
      </li>
      <li class="modal-list__item">
        <h3 class="modal-list__item-title">WHO</h3>
        {{#if _embedded.attractions.[0].name}}
